<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - FADRUM</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <style>
            p.site-title a {
                color: black;
            }
        </style>

    </head>
    <body style="background-color:#D0CEE7">
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="@Url.Action("Index","Home")"><h1>FADRUM</h1></a></p>
                </div>
                <div class="float-right">
                    @*<button class="btn btn-primary">Prijavi me</button>*@
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Početna", "Index", "Home")</li>
                            <li>@Html.ActionLink("Profil", "UserProfile", "Home")</li>
                            <li>@Html.ActionLink("Blanketi", "PreviousExams", "Home")</li>
                            <li>@Html.ActionLink("Poruke", "Messages", "Home")</li>
                            
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body" style="background-color:#635CB8">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer style="background-color:#D0CEE7">
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - JeeBerry Application</p>
                </div>
            </div>
        </footer>        
                @Scripts.Render("~/bundles/jquery")
                <script src="~/Scripts/jquery-1.11.2.js"></script>
                <script src="~/Scripts/bootstrap.min.js"></script>       

        @RenderSection("scripts", required: false)
    </body>
</html>
